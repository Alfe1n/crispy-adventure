<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- Menggunakan VBox sebagai root untuk memusatkan konten login -->

<VBox alignment="CENTER" minHeight="1080.0" minWidth="1920.0" style="-fx-background-color: #f4f7fa;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trying3.controller.auth.LoginController">
    <children>
        <!-- Konten atas: Logo dan Sambutan -->
        <VBox alignment="CENTER" prefHeight="250.0">
            <children>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
<!--                        <Image url="@picture/logo.png" />-->
                    </image>
                </ImageView>
                <Label text="Welcome Back">
                    <font>
                        <Font name="Microsoft YaHei UI Bold" size="28.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>
                <Label text="Silakan masuk ke akun CRM Percetakan Anda">
                    <font>
                        <Font name="Microsoft YaHei UI" size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>
      <HBox alignment="CENTER" prefHeight="274.0">
         <children>
              <!-- Kotak Login Utama -->
              <VBox prefHeight="295.0" prefWidth="329.0" style="-fx-background-color: #fff; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                  <children>
                      <Label text="LOGIN">
                          <font>
                              <Font name="Microsoft YaHei UI Bold" size="18.0" />
                          </font>
                      </Label>
                      <Label text="Masuk dengan akun sesuai peran anda">
                          <VBox.margin>
                              <Insets top="4.0" />
                          </VBox.margin>
                      </Label>
                      <!-- Form Input -->
                      <VBox spacing="10.0">
                          <children>
                              <Label text="Username" />
                              <TextField focusTraversable="false" prefHeight="40.0" promptText="username" style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;" />
                              <Label text="Password" />
                              <PasswordField focusTraversable="false" prefHeight="40.0" promptText="password" style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;" />
                          </children>
                          <VBox.margin>
                              <Insets top="20.0" />
                          </VBox.margin>
                      </VBox>
                      <!-- Tombol Login -->
                      <Button focusTraversable="false" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="45.0" prefWidth="400.0" style="-fx-background-color: #24A0ED; -fx-background-radius: 10;" text="Login" textFill="WHITE">
                          <VBox.margin>
                              <Insets top="25.0" />
                          </VBox.margin>
                          <font>
                              <Font name="Yu Gothic UI Semibold" size="16.0" />
                          </font>
                      </Button>
                  </children>
                  <padding>
                      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                  </padding>
              </VBox>
         </children>
      </HBox>
    </children>
</VBox>
