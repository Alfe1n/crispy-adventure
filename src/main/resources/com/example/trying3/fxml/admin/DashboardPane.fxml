<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Konten ini akan di-load ke dalam StackPane di Dashboard.fxml -->

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="content-pane-scroll" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <!-- Judul Halaman -->
                <Label styleClass="page-title" text="Dashboard Overview" />

                <!-- Kotak Statistik -->
                <HBox spacing="20.0">
                    <children>
                        <!-- Kotak Total Pesanan -->
                        <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label styleClass="stat-title" text="Total Pesanan" HBox.hgrow="ALWAYS" />
                              <ImageView fitHeight="19.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../pictures/shopping-cartDark.png" />
                                 </image>
                              </ImageView>
                                    </children>
                                </HBox>
                                <Label fx:id="totalPesananLabel" styleClass="stat-value" text="0" />
                                <Label styleClass="stat-subtitle" text="Semua pesanan terdaftar" />
                            </children>
                        </VBox>
                        <!-- Tambahkan 3 kotak stat lainnya di sini dengan cara yang sama -->
                        <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                            <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                                      <Label styleClass="stat-title" text="Pesanan Selesai" HBox.hgrow="ALWAYS" />
                              <ImageView fitHeight="22.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../pictures/shopping-cartDark.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                                <Label styleClass="stat-value" text="0" />
                                <Label styleClass="stat-subtitle" text="0% dari total" />
                            </children>
                        </VBox>
                        <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="stat-title" text="Pembayaran Pending" VBox.vgrow="ALWAYS" />
                                <Label styleClass="stat-value" text="0" />
                                <Label styleClass="stat-subtitle" text="Belum terverifikasi" />
                            </children>
                        </VBox>
                        <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="stat-title" text="Total Pendapatan" VBox.vgrow="ALWAYS" />
                                <Label styleClass="stat-value" text="Rp 0" />
                                <Label styleClass="stat-subtitle" text="Pembayaran terverifikasi" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Daftar Pesanan Terbaru (Menggunakan ListView) -->
                <VBox styleClass="card">
                    <children>
                        <Label styleClass="card-title" text="Pesanan Terbaru" />
                        <ListView fx:id="recentOrdersListView" prefHeight="500.0" styleClass="order-list-view" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>
